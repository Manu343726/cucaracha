{
    "name": "Cucaracha Development",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "features": {
        "ghcr.io/devcontainers/features/go:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential cmake ninja-build clang lld ccache",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-python.python"
            ],
            "settings": {
                "go.toolsManagement.autoUpdate": true,
                "cmake.configureOnOpen": false
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/../llvm-project,target=/workspaces/llvm-project,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/../cucaracha-os,target=/workspaces/cucaracha-os,type=bind,consistency=cached"
    ],
    "workspaceFolder": "/workspaces/cucaracha",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/cucaracha,type=bind,consistency=cached"
}
