{
    "name": "Cucaracha Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-python.python"
            ],
            "settings": {
                "go.toolsManagement.autoUpdate": true,
                "cmake.configureOnOpen": false
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/../llvm-project,target=/workspaces/llvm-project,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/../cucaracha-os,target=/workspaces/cucaracha-os,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
    ],
    "workspaceFolder": "/workspaces/cucaracha",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/cucaracha,type=bind,consistency=cached",
    "remoteUser": "vscode"
}
